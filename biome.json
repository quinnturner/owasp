{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["**/node_modules/**", "**/dist/**", "**/coverage/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"overrides": [
		{
			"formatter": {
				"indentStyle": "space"
			},
			"include": ["package.json"]
		}
	]
}
